@model List<Kitap>

@if (TempData["basarili"] != null)
{
	<h2>@TempData["Basarili"]</h2>
}

<div class="container">
	<div class="row pt-3 pb-4">
	<div>
		<h1>Kitaplar</h1>
	</div>
	</div>
<table class="table table-bordered">
	<thead>
		<tr>
		<th>
			Kitap
		</th>
		<th>
			Tanım
		</th>
		<th>
			Yazar
				
		</th>
		<th>
			Fiyat
		</th>
		<th>
			Kitap Türü
		</th>
		<th>
		</th>
		<th>
		</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var Kitap in Model)
		{
			<tr>
				<td>@Kitap.Id - @Kitap.KitapAdi</td>
				<td>@Kitap.Tanim</td>
				<td>@Kitap.Yazar</td>
				<td>@Kitap.Fiyat</td>
				<td></td>
				<td>
				<a asp-controller="Kitap" asp-action="Guncelle" asp-route-id="@Kitap.Id" type="button" class="btn btn-success" style="width:250px">
				Güncelle
				</a>
				</td>
				<td>
				<a asp-controller="Kitap" asp-action="Sil" asp-route-id="@Kitap.Id" type="button" class="btn btn-danger" style="width:250px">
				Sil
				</a>
				</td>
			</tr>
		}
	</tbody>
</table>
	<div class="row pt-3 pb-2">
		<div>
			<a asp-controller="Kitap" asp-action="Ekle" class="btn btn-lg btn-primary" type="button">
				Yeni Kitap Ekle
			</a>
		</div>
	</div>
</div>